                        ContentCfgTypes.StatusConfigObj
                        ContentCfgTypes.ParameterHistoryConfigObj
                        ContentCfgTypes.MultiParameterHistoryConfigObj
                        ContentCfgTypes.MultiParameterHistoryReportConfigObj
                        ContentCfgTypes.TableByMultiLocConfigObj                        
                        ContentCfgTypes.TableByLocConfigObj
                        ContentCfgTypes.CustomTableConfigObj
                        ContentCfgTypes.CustomTableIdConfigObj
                        ContentCfgTypes.RollingReportConfigIdObj
  
                        WidgetTypes

  Other-Modules:        Persist.Mongo.Settings.Internal
  Build-Depends:         base                     >= 4         &&   < 5
                       , text                     >= 0.11.3.1  &&   < 1.1.5
                       , transformers             == 0.3.0.0
                       , lens                     >= 4.1.2     &&   < 4.1.5
                       , aeson                    >= 0.7.0.2   &&   < 0.7.1
                       , safecopy                 == 0.8.3
                       , structured-script-lang   == 0.1.5
                       , hashable                 >= 1.2.1.0
                       , cereal                   >= 0.4.0.1
                       , parsec                   == 3.1.5
                       , containers               == 0.5.5.1
                       , bytestring               >= 0.10.0.2
                       , time                     >= 1.4.0 && <= 1.4.2
                       , old-locale               == 1.0.0.5
                       , unordered-containers     >= 0.2.3.3 && < 0.2.4.1
                       , yaml                     >= 0.8.8.1 && <= 0.8.8.2
                       , network                  >= 2.4.2.2 && <= 2.5.0.0
                       , yesod-core               >= 1.2.12  && <= 1.2.16
                       , yesod                    == 1.2.5.2
                       , template-haskell         == 2.9.0.0
                       , persistent-template      == 1.3.1.3                 
                       , persistent-mongoDB       == 1.3.1.1
                       , persistent               == 1.3.0.6
                       

                       

Test-Suite spec
  Type:                 exitcode-stdio-1.0
  Hs-Source-Dirs:       test
                        ,src
  Ghc-Options:          -Wall
  Main-Is:              Spec.hs
  Build-Depends:        base
                      , persist-mongo-template   
                      , persistent               
                      , hspec
                      , yaml                     
                      , text                     
                      , aeson                    
                      , yesod                                     
                      , time                     
                      , old-locale               
                      , parsec                   
                      , transformers             
                      , bytestring               
                      , template-haskell         
                      , network                  
                      , persistent-mongoDB       
                      , containers               
                      , unordered-containers     
                      , lens                     
                      , quickcheck               

Executable persist-mongo-template
    main-is:            Main.hs
    HS-Source-Dirs:     src
    build-depends:      base
                      , persist-mongo-template   
                      , persistent               
                      , yesod                    
                      , time                     
                      , old-locale               
                      , yaml                     
                      , text                     
                      , aeson                    
                      , parsec                   
                      , transformers             
